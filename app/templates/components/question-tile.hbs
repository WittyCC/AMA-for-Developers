<li>
  {{#link-to 'question' question.id}}{{question.qcontent}} asked by {{question.author}} {{/link-to}}
  {{#if isNotesShowing}}
    <p>{{question.notes}} <button {{action 'notesHide' question.notes}}>Hide Notes</button></p>
  {{else}}
    <button {{action 'notesShow'}}> Show Notes</button>
  {{/if}}
</li>
